---
import { paths } from "../data/paths";
---

<html lang="zh-Hant">
  <head>
    <meta charset="utf-8" />
    <title>Paths</title>
  </head>
  <body>
    <h1>Paths</h1>

    <ul>
      {paths.map((p) => (
        <li>
          <h2>
            <a href={`/paths/${p.id}`}>{p.title}</a>
          </h2>
          <p>{p.description}</p>
          <p>Nodes: {p.nodeIds.length}</p>
        </li>
      ))}
    </ul>
  </body>
</html>